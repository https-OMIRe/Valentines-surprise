<script>
let currentPage = 0;
const totalPages = 3;
const pagesContainer = document.querySelector('.pages-container');
let maybeClickCount = 0;

/* Navigation */
function goToPage(index){
currentPage = index;
pagesContainer.style.transform = `translateX(-${index*100}%)`;
document.querySelectorAll('.page-dot')
.forEach((dot,i)=>dot.classList.toggle('active',i===index));
}

/* Floating hearts */
function createHeart(){
const el=document.createElement('div');
el.className='heart-particle';
el.textContent='üíï';
el.style.left=Math.random()*100+'%';
el.style.bottom='-20px';
el.style.fontSize=(14+Math.random()*18)+'px';
el.style.animationDuration=(6+Math.random()*4)+'s';
document.body.appendChild(el);
setTimeout(()=>el.remove(),10000);
}
setInterval(createHeart,1200);

/* Sparkles */
function createSparkle(){
const s=document.createElement('div');
s.className='sparkle';
s.style.left=Math.random()*100+'%';
s.style.top=Math.random()*100+'%';
s.style.background='radial-gradient(circle,#c62828 0%,transparent 70%)';
document.getElementById('sparkles-container').appendChild(s);
setTimeout(()=>s.remove(),4000);
}
setInterval(createSparkle,800);

/* YES */
function celebrateYes(){
alert("You just made me the happiest person alive! üíï");
}

/* Safe mobile movement */
function avoidMaybe(){
const btn=document.getElementById('maybeBtn');
maybeClickCount++;

const padding=20;
const btnWidth=btn.offsetWidth;
const btnHeight=btn.offsetHeight;

const randomX=Math.random()*(window.innerWidth-btnWidth-padding);
const randomY=Math.random()*(window.innerHeight-btnHeight-padding);

btn.style.position='fixed';
btn.style.left=randomX+'px';
btn.style.top=randomY+'px';

if(maybeClickCount>4){
btn.textContent="You can't escape üòÑ";
}
}
</script>
</body>
